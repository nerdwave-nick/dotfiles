gtk-single-instance=true
resize-overlay-duration=0s
keybind=clear

keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+a=select_all

keybind = ctrl+a>r=reload_config
keybind = ctrl+a>zero=reset_font_size
keybind = ctrl+a>equal=increase_font_size:1
keybind = ctrl+a>plus=increase_font_size:1
keybind = ctrl+a>minus=decrease_font_size:1

keybind = ctrl+a>up=jump_to_prompt:-1
keybind = ctrl+a>down=jump_to_prompt:1

command = /usr/bin/fish
